<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="4dp"
    android:layout_marginBottom="2dp"
    android:elevation="4dp"
    android:layout_margin="2sp">

    <!-- Palabra en Inglés -->
    <TextView
        android:id="@+id/textViewCustomWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- Significado en Español -->
    <TextView
        android:id="@+id/textViewTranslationCustomWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translation"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray" />

    <!-- Botones de Acciones -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/buttonLearnForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Aprender"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aprendida?"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchLearned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Aprender"
                android:textOn="Desaprender"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
